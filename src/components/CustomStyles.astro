---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Open Sans';
    --aw-font-serif: 'Open Sans';
    --aw-font-heading: 'Open Sans';
    --aw-color-primary: #032b44;
    --aw-color-secondary: #808080;
    --aw-color-accent: #ffc107;
    --aw-color-text-heading: #032b44;
    --aw-color-text-default: #1a1d23;
    --aw-color-text-muted: #1a1d23 / 66%;
    --aw-color-bg-page: #ffffff;
    --aw-color-bg-page-dark: #1a1d23;
  }

  ::selection {
    background-color: #ffc107;
  }

  .dark {
    --aw-font-sans: 'Open Sans';
    --aw-font-serif: 'Open Sans';
    --aw-font-heading: 'Open Sans';
    --aw-color-primary: #032b44;
    --aw-color-secondary: #f7f7f7;
    --aw-color-accent: #ffc107;
    --aw-color-text-heading: #ffffff;
    --aw-color-text-default: #f7f7f7;
    --aw-color-text-muted: #f7f7f7 / 66%;
    --aw-color-bg-page: #1a1d23;
  }

  ::selection.dark {
    background-color: #ffc107;
    color: #ffffff;
  }
</style>
